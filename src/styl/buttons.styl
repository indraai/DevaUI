  
button
  transition: var(--transition-default)
  background-color: transparent
  box-shadow: inset 0 2px 3px rgba($colors.black, .25), 0 1px 1px rgba($colors.white, .1)
  background-color: rgba($colors.baby-blue, .5)
  color: rgba($colors.black, .5)
  border: 0
  outline: 0
  padding: .5rem .25rem
  margin: 0
  &:hover
    cursor: pointer
    box-shadow: 0 2px 3px rgba($colors.black, .25)
    color: rgba($colors.white, .75)
    background-color: rgba($colors.green, .75)
  &:active
    cursor: pointer
    box-shadow: inset 0 0 5px rgba($colors.white, .25)
    color: rgba($colors.white, .75)
    background-color: rgba($colors.red, .75)

  &[title="No"]
    background-color: rgba($colors.red, .5)

.btn
  padding: .25rem .5rem
  border-radius: .25rem
  line-height: 1
  margin: 0 .1rem
  font-size: inherit

  .icn
    margin-right: .25rem
    display: inline-block

  &.speak
    background-color: transparent
    border: none
    box-shadow: none
  &.docs
    width: 100%
    text-align: left
    margin: 0 0 2px 0
    padding: .5rem
    box-shadow: none
    background: rgba($colors.dark-grey, .5)
    color: $colors.white
    border-radius: .25rem
    &:hover
      color: $colors.green
    &::before
      content: "document"
      font-family: "icons"

  &.sign
    background-color: $colors.orange
    color: darken($colors.orange, 50%)

  &.cmd
  &.tty
    display: block
    width: 100%
    box-shadow: none
    text-align: left
    border-radius: 0
    background-color: transparent
    color: inherit
    position: relative
    margin: 0 0 2px 0
    border: none
    border-radius: .25rem
    padding: .5rem
    border-left: .2rem solid
    border-right: .2rem solid
    &:hover
      color: $colors.orange
    &::before
      content: "\e909"
      font-family: icons
      display: inline-block
      margin-right: .3rem
      font-size: .8rem

  &.menu
    display: block
    text-align: left
    margin: 3px 0 0 0
    background-color: rgba($colors.green, 0)
    color: $colors.baby-blue
    border-radius: .25rem
    padding: .25rem .5rem
    font-size: .9rem
    box-shadow: none
    transition: all .4s linear
    &:hover
      color: darken($colors.green, 50%)
      background-color: rgba($colors.green, 1)

    &[title="quit"]
    &[title="done"]
      margin-top: 5px
    &[title="quit"]
      color: $colors.red
      background-color: rgba($colors.red, 0)
      &:hover
        color: lighten($colors.red, 50%)
        background-color: rgba($colors.red, 1)
    &[title="done"]
      color: $colors.yellow
      background-color: rgba($colors.yellow, 0)
      &:hover
        color: lighten($colors.yellow, 50%)
        background-color: rgba($colors.yellow, 1)

  &.confirm
    margin: 0 1px
    padding: .3rem 1rem
    font-size: 1rem
    font-weight: bold
    border-radius: .25rem
    &[title="yes"]
      background-color: rgba($colors.blue, .3)
      color: lighten($colors.blue, 25%)
      &:hover
        color: lighten($colors.blue, 75%)
        background-color: rgba($colors.blue, .75)
    &[title="no"]
      background-color: rgba($colors.red, .3)
      color: lighten($colors.red, 25%)
      &:hover
        background-color: rgba($colors.red, .75)
      color: lighten($colors.red, 75%)

  &.look
    padding: .25rem .5rem
    background-color: rgba($colors.orange,.5)
    margin: 3px auto
    &:hover
      background-color: rgba($colors.orange,1)
  &.read
    border-radius: .25
    background-color: rgba($colors.orange,.5)
    margin: 3px auto
    &:hover
      background-color: rgba($colors.orange,1)
