#Console
  > .box
    display: flex

    &.items
      flex: 1
      overflow: scroll
      height: 100%

      > .list
        flex: 1
        overflow: scroll

        > .item
          flex: 0
          display: flex
          align-items: center
          padding: .5rem
          margin: .25rem 0

          &.shuttle
            &.livechat
              .text
                .box.chat
                  border-top: 1px dotted
                  padding: .5rem 0

                  .btn.chat
                    border-radius: 0.25rem
                    font-size: .8rem
                    padding: 0.25rem 0.5rem
                    line-height: 1

          &.client
            background-color: rgba(0,0,0,.1)
            border-radius: 1.5rem

          > .person
            flex: 0 6rem
            min-width: 6rem
            display: flex
            align-items: center
            align-self: start
            margin: .25rem 0 0 .25rem
            .user
              flex: 1

            .avatar
              line-height: 1
              flex: 0
              margin-right: .25rem

              img
                width: 27px
                height: 27px
                border-radius: 50%

          .emoji
            flex: 0
            margin-right: 3px
            font-size: .7rem

          .label
            flex: 0

          .text
            flex: 1
            line-height: 1.5
            margin: .5rem
            overflow: hidden
            text-overflow: elipsis

            .item
              display: flex
              margin: 3px 0 0 0
              .label
                margin-right: .5rem
                background-color: $colors.darkest-grey
                padding: .15rem .5rem
                border-radius: 1rem
                font-size: .75rem
                align-self: start
                min-width: 5rem



    // display for main prompt input
    &.prompt
      flex: 0
      padding: .15rem
      border-radius: 1.5rem
      box-shadow: 0 3px 9px rgba(0,0,0,.1)
      background-color: lighten($colors.darkest-grey, 10%)
      border: 3px solid $colors.darkest-grey
      flex-flow: row nowrap
      display: flex
      .label
        padding-right: .25rem
      form
        display: flex
        flex: 1


#Prompt
  background-color: transparent
  flex: 1
  min-width: 100%
  border-radius: 1.5rem
  margin: 0
  border: none
  outline: none
  width: 100%
  padding: .25rem
  color: $colors.light-green
  font-family: $fonts-text
  font-weight: 100
  resize: none
  height: auto
  font-size: 1rem

