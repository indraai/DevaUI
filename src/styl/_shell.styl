.shell
  display: flex
  flex-flow: column nowrap
  font-family: $fonts-text

#Shell
  background-color: transparent
  margin: 0
  padding: 5px

#ShellOutput
  overflow: scroll
  flex: 1

  .text
    audio.tts
      width: 300px
      height: 18px
  .image
    img
      max-width: 100%

  .cmd
  .tty
    color: $colors.red

    .label
      display: none

  .telnet
    .text
      font-size: 11px
      font-family: $fonts-text
      white-space: pre-wrap
      line-height: 1
  .item
    display: flex
    &.flags
      font-size: 1rem
      padding: .5rem
      margin: .5rem 0
      .label
        color: rgba($colors.baby-blue, .5)
        border-right: 3px solid
        margin-right: .5rem
    .label
      flex: 0 72px
      margin-right: .25rem
      padding: .25rem
      &.emoji
        min-width: 25px
        flex: 0 25px
    .value
      flex: 1
      padding: .25rem

    &.select
      .label
        opacity: .5
        flex: 0
        font-size: .75rem
        padding: .25rem
        border-right: 1px solid
        &[data-index]::before
          content: attr(data-index)
          display: inline-block
          background-color: $colors.dark-grey
          color: $colors.light-grey
          padding: 0 .5rem
          border-radius: $border.inner
          margin-right: 3px

      .input
        flex: 1
        display: flex
        button
          background-color: transparent
          text-align: left
          width: 100%
          display: block
          color: $colors.baby-blue
          box-shadow: none
          border: none
          padding: .15rem
          &:hover
            color: $colors.red
            background-color: rgba($colors.red, .2)
            box-shadow: none
            border: none


  .box
    &.buttons
      .cloud
        border-radius: $border.outer
        line-height: 1.25

    &.menu
      .cloud
        transition: all .5s linear
        background-color: transparent
        font-weight: bold
        border-radius: $border.outer
        padding: .15rem 0
        margin: 2px 0
        color: rgba($colors.green, .5)
        text-align: left
        &[data-cloud]
          &[title="done"]
            background-color: rgba($colors.orange, .25)
            color: $colors.orange
            margin: .2rem
            padding: .25rem .75rem .25rem .25rem

            &::before
              background-color: rgba(darken($colors.orange, 50%), .5)

            &:hover
              background-color: rgba($colors.orange, .5)
              color: $colors.orange

          &::before
            content: attr(data-cloud)
            background-color: rgba($colors.green, .25)
            border-radius: $border.inner
            display: inline-block
            min-width: 1.5rem
            text-align: center
            display: inline-block
            line-height: 1.5

        &::before
          transition: var(--transition-default)
          content: "\e8d0"
          margin-right: .5rem

        &:hover
          text-shadow: 0 0 9px rgba($colors.green, 50%)
          color: $colors.green
          background-color: transparent

  .btn
    box-shadow: none

    &.cloud
      font-size: .9rem
      margin: .2rem
      padding: .25rem .75rem .25rem .25rem
      background-color: rgba($colors.green, .25)
      color: $colors.green
      display: flex
      flex-flow: row nowrap
      border-radius: $border.outer

      &::before
        content: attr(data-cloud)
        font-size: .65rem
        margin-right: 5px
        background-color: rgba($colors.darkest-grey, .35)
        width: .75rem
        height: .75rem
        border-radius: $border.inner
        padding: .25rem

      &:hover
        background-color: rgba($colors.green, .75)
        color: darken($colors.green, 75%)

      &[title="quit"]
        background-color: rgba($colors.red, .25)
        color: $colors.red
        margin: .2rem
        padding: .25rem .75rem .25rem .25rem

        &::before
          background-color: rgba(darken($colors.red, 50%), .5)

        &:hover
          background-color: rgba($colors.red, .5)
          color: $colors.red

#ShellInput
  display: flex
  align-items: center
  flex: 0
  // background-color: rgba($colors.black, .8)

#ShellInput .label
  flex: 0
  white-space: nowrap
  font-size: .75rem
  padding: .5rem 0 .65rem .5rem
  line-height: 1
  opacity: .25
  &::after
    content: ":"
    margin-left: .1rem

#ShellInput .input
  flex: 1


#q
  background-color: transparent
  margin: 0
  border: none
  outline: none
  width: 100%
  color: $colors.light-green
  font-size: 1rem
  padding: 0
  font-family: $fonts-text
  font-weight: 100
  resize: none
  height: auto

  &.l
    height: 6rem
.log-item
  display: flex
  align-items: flex-start
  padding: .25rem
  font-size: 1.2rem
  line-height: 1.3

  &:last-child
    border-bottom: none;

  .message
    white-space: pre-wrap
    line-height: 1.5

  .text
    flex: 1
    max-width: calc(100% - 50px)
    align-self: center

    img
      max-width: 100%

    .pdf
      iframe
        height: 770px

    .tweet
      display: flex
      flex-flow: column nowrap
      margin: .5rem

      .profile
        display: flex
        align-items: center

        &_image
          img
            border-radius: 50%
            margin-right: 1rem
        .screen_name
          flex: 1
          font-size: 1.5rem

        a
          text-decoration: none
          color: $colors.baby-blue
          font-weight: bold

    .feecting
      padding-right: .5rem

    .number-item
      margin: 2px 0
      padding: 3px
      &:nth-child(odd)
        &::before
          color: $colors.green
      &::before
        color: $colors.baby-blue
        background-color: transparent
        border-right: 2px solid
        display: inline-block
        min-width: 25px
        border-radius: 0

    pre
      white-space: pre-wrap
      max-height: 770px
      overflow: auto
      code
        white-space: pre-wrap

    .agents
    .objects
      display: flex
      .avi
        border-radius: $border.inner
        line-height: 0
        padding: 2px
        img
          border-radius: $border.inner
          width: 40px
          height: 40px

  .prompt
    flex: 0 50px
    max-width: 50px
    display: flex
    flex-flow: column nowrap
    align-items: center
    white-space: nowrap
    font-size: .5rem
    padding: 0 .5rem 0 .5rem

    .emoji
      flex: 0
      margin-right: 3px
      font-size: .7rem

    .label
      flex: 0

    .avatar
      line-height: 1
      img
        width: 27px
        height: 27px
        border-radius: 50%

  &.agent
  &.object
    .avi
      background-color: transparent
      border: none
      box-shadow: none
      width: 100%
      padding: 1rem 0
      &:hover
        background-color: transparent
      img
        border-radius: 50%
        cursor: default

  .line-item
  .list-item
    padding: 3px 5px
    margin-top: 5px
    line-height: 1.25

  .list-item
    &::before
      content: "⊙"
      margin-right: 3px

  .line-item
    margin-left: 2rem
    &::before
      content: "꩜"
      margin-right: 3px
      margin-left: -1.5rem
