#wikiData
  background-color: lighten($colors.light-grey, 60%)
  padding: 1rem
  color: $colors.darker-grey

  [data-label]::before
    min-width: 100px

  &::before
    content: "Wiki"
    background-image: url(/public/devas/wiki/emoji.png);
    background-repeat: no-repeat;
    background-size: 45px 45px
    background-position: 0 0
    width: 45px
    height: 45px
    padding-left: 50px
