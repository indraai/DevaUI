menu
  background-color: $colors.darkest-grey
  display: flex
  flex-flow: row nowrap
  width: 100%
  margin: 0
  padding: 0
  ul
    list-style: none
    margin: 0
    padding: 1px
    display: flex
    flex-flow: row nowrap
    align-items: center
    justify-content: center
    width: 100%

    li
      padding: 0
      margin: 0

      button
        margin: .3rem
        font-size: .8rem
        padding: .3rem .5rem
        display: block
        text-align: left
        border-radius: .3rem
        background-color: $colors.dark-grey
        > i
          margin-right: 5px
