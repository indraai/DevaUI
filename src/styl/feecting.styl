.feecting
  background-repeat: no-repeat
  background-position: top center
  background-size: 100% auto
  p
    margin-top: 0
    margin-bottom: 1rem
    font-size: 1.2rem
    line-height: 1.5
  &-image
  .external-image
    display: block
    text-align: center
    img
      max-width: 100%
      border-radius: .5rem

  .avatar-image
    float: left

.feecting
#Content
  font-family: $fonts-text

  .comment
    color: $colors.grey
    background-color: darken($colors.grey, 50%)
    padding: .5rem
    margin: .25rem 0
    border-radius: .5rem

  .back-button
    color: $colors.light-grey
    position: absolute
    top: 0
    left: 0
    &:hover
      color: $colors.baby-blue

  h1, h2, h3, h4
    line-height: 1.25
    font-weight: 100
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
  h1
    font-size: 2.5rem
    padding: 25px 0 10px 0
    margin: 5px 0 5px 0
    border-bottom: 1px solid

  h2
    font-size: 2.1rem
    padding: 20px 0 5px 0
    margin: 5px 0 5px 0

  h3
    font-size: 1.7rem
    padding: 15px 0 5px 0
    margin: 5px 0 5px 0

  h4
    font-size: 1.3rem
    padding: 10px 0 5px
    margin: 5px 0 5px 0

  .comments
    margin: 10px 0 0 0
    display: flex
    flex-flow: column nowrap
    .label
      display: none
    .comment
      display: flex
      flex-flow: row nowrap
      padding: 1rem
      .avatar
        margin-right: .5rem
        img
          border-radius: 50%
  .begin
    margin: 10px 0 0 0
    color: $colors.orange

  .end
    margin: 0 0 10px 0
    color: $colors.orange

  .var
    margin: 3px 0 0 0

  .number-item
    margin: 5px 0 0 0
    display: block

    .number
      flex: 0 35px

    .name
      flex: 1

  .line
    line-height: 1.5
    min-height: 15px

    .direction
      min-width: 50%
      border-radius: 1rem
      display: flex
      align-items: center
      padding: .3rem .5rem .3rem .3rem
      flex: 1
      .icn
        flex: 0
        padding: .2rem

      span
        flex: 1
        text-align: left
        font-weight: bold
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
        font-size: 1rem

      &.north
      &.up
        color: $colors.green
      &.south
      &.down
        color: $colors.orange
      &.east
        color: $colors.pink
      &.west
        color: $colors.baby-blue

      &:hover
        &.north
        &.up
          background-color: $colors.green
          color: darken($colors.green, 50%)
        &.south
        &.down
          background-color: $colors.orange
          color: darken($colors.orange, 50%)
        &.east
          background-color: $colors.pink
          color: darken($colors.pink, 50%)
        &.west
          background-color: $colors.baby-blue
          color: darken($colors.baby-blue, 50%)

  .image
    text-align: center
    img
      border-radius: .5rem
      max-width: 100%

  .item
    display: flex
    flex-flow: row nowrap
    margin: 3px 0

    &.indent1
      padding-left: 20px
    &.indent2
      padding-left: 40px
    &.indent3
      padding-left: 60px

    .label
      &::before
        display: inline-block
        margin-right: .2rem
        font-family: 'icons'

    &.id
      .label
        &::before
          content: $icons.key
    &.key
      .label
        &::before
          content: $icons.key-hole

    &.emoji
      .label
        &::before
          content: $icons.smile

    &.title
      .label
        &::before
          content: $icons.news

    &.name
      .label
        &::before
          content: $icons.profile

    &.describe
      .label
        &::before
          content: $icons.document

    &.from
      .label
        &::before
          content: $icons.typewriter

    &.date
      .label
        &::before
          content: $icons.calendar-full

    &.attn
      .label
        &::before
          content: $icons.profile

    &.respond
    &.response
      .label
        &::before
          content: $icons.file-check

    &.remember
      .label
        &::before
          content: $icons.brain

    &.license
      .label
        &::before
          content: $icons.license

    &.copyright
      .label
        &::before
          content: "©"

    &.terms
      .label
        &::before
          content: $icons.clipboard-text

    &.person
      .label
        color: $colors.green
        &::before
          content: $icons.user
    &.place
      .label
        color: $colors.orange
        &::before
          content: $icons.city
    &.thing
      .label
        color: $colors.yellow
        &::before
          content: $icons.button
    &.group
      .label
        color: $colors.purple
        &::before
          content: $icons.group-work

    &.select
      .label
        min-width: 100px

    &.coordinates
      display: none

    .value
      padding: .1rem .25rem
      font-size: 1rem

    .label
      border-radius: .5rem
      background-color: $colors.darkest-grey
      color: $colors.green
      font-size: .8rem
      padding: .25rem

      &.develop
        color: $colors.orange
        border-color: $colors.orange
        & + .value
          color: $colors.light-orange

      &.learn
        color: $colors.pink
        border-color: $colors.pink
        & + .value
          color: $colors.light-pink

      &.wait
        color: $colors.pink
        border-color: $colors.pink
        & + .value
          color: $colors.light-pink

      &.report
        color: $colors.baby-blue
        background-color: $colors.blue
        & + .value
          color: $colors.blue
          background-color: $colors.baby-blue

      &.set, &.listen, &.func, &.medhod, &.module
        color: $colors.purple
        background-color: $colors.aqua
        & + .value
          color: $colors.purple
          background-color: $colors.light-aqua

      &.goal
        color: $colors.blue
        background-color: $colors.baby-blue

        & + .value
          color: $colors.baby-blue
          background-color: $colors.blue

      &.do, &.for, &.while, &.during, &.goto
        color: $colors.light-green
        background-color: $colors.green
        margin-top: 10px
        & + .value
          color: $colors.green
          background-color: $colors.light-green
          margin-top: 10px


      &.if, &.then, &.else, &.finally, &.wait
        color: $colors.yellow
        border-color: $colors.yellow
        margin-top: 10px
        border-top: 1px solid
        border-right: none
        & + .value
          color: $colors.black
          background-color: $colors.yellow
          margin-top: 10px
          padding: 3px 10px 3px 10px
          border-radius: 0 10px 10px 0


      &.pin
        border-right: none
        color: $colors.orange
        background-color: $colors.darkest-grey
        border: none
        border-radius: 12px 0 0 12px
        padding: 3px 6px
        font-size: .8rem
        flex: 0 50px
        min-width: 50px
        margin: 1px 0
        &::before
          content: "\e832"
          font-family: 'icons'
          margin-right: 5px
        & + .value
          color: $colors.light-orange
          background-color: $colors.darker-grey
          border-radius: 0 12px 12px 0
          padding: 3px 6px
          font-size: .8rem
          margin: 1px 0


  hr
    &.single
      margin: .5rem 0 .5rem 0
      border: 0
      &.xsmall
        border-bottom: 1px solid
      &.small
        border-bottom: 2px solid
      &.medium
        border-bottom: 3px solid
      &.large
        border-bottom: 5px solid


    &.double
      margin: .5rem 0 .5rem 0
      border: 0
      &.xsmall
        border-bottom: 1px double
      &.small
        border-bottom: 2px double
      &.medium
        border-bottom: 3px double
      &.large
        border-bottom: 5px double

    &.heading
      margin: 2rem 0 2rem 0
      border: 0
      border-bottom: 7px dotted $colors.orange


  .remember-word
    border-radius: 5px
    display: inline-block
    padding: 0 3px
    margin: 1px
    color: $colors.black
    background-color: $colors.yellow
    font-weight: bold

  .learn-word
    border-radius: 5px
    display: inline-block
    padding: 0 3px
    color: $colors.white
    background-color: $colors.pink
    font-weight: bold

  .child
    padding: 2px 5px
    > .key
      transition: var(--transition-default)
      margin:  0 2px
      padding: 5px 5px 5px 25px
      border-radius: 7px
      position: relative

      &:hover
        cursor: pointer
      &::before
        position: absolute
        left: 0
        transition: var(--transition-default)
        transform: rotate(0)
        font-family: 'icons'
        content: "\e876"
        width: 20px
        height: 20px
        font-size: 12px
        border-radius: 50%
        line-height: 1.75
        text-align: center
        text-indent: 2px

      &.open
        font-weight: bold
        &::before
          transform: rotate(90deg)
          color: $colors.baby-blue
        & + .values
          padding: .5rem
          display: block


      & + .values
        display: none



    > .values
      transition: var(--transition-default)
      margin: 0 2px

      > .row
        margin: 0
        position: relative
        padding: 3px


  .row
    display: flex
    flex-flow: row nowrap
    padding: 2px 5px
    .key
      flex: 0 auto
      padding: 6px 10px
      margin: 0
      min-width: 93px
    .value
      flex: 0 auto
      border-radius: .5rem
      color: $colors.dark-grey
      background-color: darken($colors.white, 20%)
      padding: 6px 10px
      margin: 0
      border-radius: 1rem
      border: 1px dotted $colors.grey

      .jump
        transition: var(--transition-default)
        background-color: transparent
        border-radius: 7px
        padding: 5px 10px
        &:hover
          color: $colors.orange
        &:active
          color: $colors.baby-blue





  code
    font-family: $fonts-code

  .line
    > .line
      margin-left: 10px

    &.bulletin
      display: flex
      .id
        flex: 0 30px
      .author
        flex: 0 150px
      .subject
        flex: 1
      .date
        flex: 0 130px


  .link
    .value
      overflow: hidden
      a
        color: darken($colors.baby-blue, 25%)
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
        max-width: 75%
        display: block
        &:hover
          color: $colors.red

  .play
    color: $colors.pink
    background-color: transparent
    &:hover
      background-color: $colors.pink
      color: darken($colors.pink, 75%)

  .tel
    .value
      .btn
        color: $colors.green
        padding: .5rem 1rem
        &:hover
          background-color: $colors.green
          color: darken($colors.green, 75%)

  .number-item
  .line-item
  .list-item
    padding: 3px 5px
    margin-top: 5px
    line-height: 1.25

  .list-item
    &::before
      content: "⊙"
      margin-right: 3px

  .line-item
    margin-left: 2rem
    &::before
      content: "꩜"
      margin-right: 3px
      margin-left: -1.5rem

    &.indent-1::before
      margin-left: 15px

  $num-size = 24px
  .number-item
    position: relative
    padding-left: $num-size + 20
    margin-top: .5rem
    padding-bottom: .5rem
    &::before
      position: absolute
      opacity: .5
      display: block
      line-height: 1.5
      top: 0
      left: 0
      font-size: 1rem
      text-align: center
      width: $num-size
      height: $num-size
      border-radius: $num-size
  .money
    display: inline-block
    border: 1px dotted $colors.green
    color: $colors.green
    padding: .1rem .75rem .1rem .1rem
    margin: 0 .2rem
    border-radius: 1rem
    line-height: 1
    .icn
      background-color: $colors.green
      border-radius: 50%
      color: darken($colors.green, 50%)
      padding: .3rem
      width: 30px
      height: 30px
      display: inline-block
      text-align: center
      text-indext: 2px
      margin-right: .5rem

  .info
  .note
  .alert
  .warning
    min-width: 50px
    flex: 1
    padding: .25rem 0 .25rem 2rem
    margin: 1rem .5rem
    border-radius: .5rem
    padding: 1rem
    &::before
      font-family: icons
      font-size: 1rem
      display: inline-block
      line-height: 1
      font-weight: 100
      margin-right: .25rem

  .info
    color: darken($colors.dark-grey, 50%)
    background-color: $colors.white
    &::before
      content: $icons.fingers-victory

  .note
    color: darken($colors.note, 70%)
    background-color: $colors.note
    &::before
      content: $icons.pencil3

  .warning
    color: darken($colors.yellow, 70%)
    background-color: $colors.yellow
    &::before
      content: $icons.warning

  .alert
    color: lighten($colors.red, 70%)
    background-color: $colors.red
    &::before
      content: $icons.bubble-alert

#Content
  .feecting
    [data-cmd]
    [data-tty]
      &:hover
        cursor: pointer

    &.twitch
      background-color: #9147ff
      border-radius: 0 .5rem .5rem .5rem
      padding: 1rem
      margin: 2rem 0 .5rem 0
      position: relative
      color: $colors.white

      h2
        position: absolute
        top: -28px
        left: 0
        display: inline-block
        text-align: center
        font-size: 1.2rem
        font-weight: normal
        color: lighten(#9147ff, 50%)
        margin: 0
        padding: .25rem 1rem 0 1rem
        background-color: #9147ff
        border-radius: .5rem .5rem 0 0
        border-bottom: 0

    &.twitter
      background-color: rgba(0,0,0,.1);
      padding: .5rem
      border-radius: 1rem
      box-shadow: 0 3px 9px rgba(0,0,0,.25)
      .name
        font-size: 1.2rem
        font-weight: bold

      .describe
      .status
      .network
        border: none

    &.pastebin
    &.ezine
      pre
        code
          white-space: pre-wrap
          font-size: .55rem

  .tag
    display: inline-block
    font-weight: bold
    &:hover
      cursor: pointer
    &.person
      color: $colors.green
    &.place
      color: $colors.orange
    &.thing
      color: $colors.yellow
    &.group
      color: $colors.purple

  .box
    &.user
      display: flex
      .avatar
        flex: 0
        padding: 1rem 1rem 0 0

        img
          border-radius: 50%

      .profile
        flex: 1

    &.object
    .pdf
      height: 100%
    &.training
      display: flex
      flex-flow: column nowrap
      margin: .5rem 0
      padding: .5rem
    &.card
      background-color: rgba(255,255,255,.5)
      box-shadow: 0 3px 5px rgba(0,0,0,.25)
      color: $colors.dark-grey
      border-radius: .5rem
      margin: 1rem 0
      padding: 1rem

    &.agents
    &.blips
      display: flex
      flex-flow: row wrap
      margin: 0
      border-radius: .5rem

      .item
        .value
          .cmd
            background-color: transparent
            color: inherit
            &:hover
              color: $colors.orange
            &::before
              font-size: 1rem
    &.agents
      .item
        .value
          .cmd
            font-size: .75rem
            &::before
              font-size: .75rem
              content: "\e71e"
    &.blips
      .item
        .value
          .btn.cmd
            border: none
            padding: .0 .25rem
            margin:0
            font-size: .8rem
            &::before
              content: "\e713"


    &.code
      font-family: $fonts-code
      white-space: pre-wrap
      font-size: .55rem
      font-weight: 100
      padding: 0 .5rem
      max-width: 100%
      max-height: 100%

    &.news
      h1
        border-bottom: none;

      p
        font-size: 1rem

      .rssitem
        border: 1px solid
        border-radius: .5rem
        margin: 0 0 1rem 0
        padding: .5rem

        h2
          font-size: 1.5rem
          padding: .5rem
          margin: 0
          border-bottom: none
          text-overflow: initial
          white-space: pre-wrap
    &.fact
      margin: 1rem
      border: 1px solid
      border-radius: .5rem
      padding: .5rem 1rem

    .twitter
      display: flex
      overflow: auto

      .tweet
        flex 0 450px
        min-width: 450px
        flex-flow: row wrap

        .avatar
          flex: 0
        .item
          &.name
          &.origin
            flex: 1
          &.status
            flex: 0 100%

          .label
            display: none

    .tweet
      display: flex
      flex-flow: row nowrap
      margin: 1.5rem .5rem
      padding: 1rem
      border-radius: .5rem
      font-size: .9rem
      border-left: .2rem solid
      border-right: .2rem solid

      .avatar
        img
          border-radius: 50%

      .profile
        display: flex
        flex-flow: column nowrap
        flex: 1
        .label
          display: none
        &_image
          img
            border-radius: 5rem
        &_name
          font-size: 1.2rem
          font-weight: bold
          padding-left: .5rem


.pastebin
.ezine
  pre
    code
      max-width: 100%
      display: block
      font-family: $fonts-code
      font-weight: normal
      font-size: .55rem
      white-space: pre-wrap
      text-decoration: none

.browser-item
  .cover
    .pdf
      border-radius: .5rem
      overflow: hidden
      iframe
        height: 600px
  .cmd
  .tty
    .label
      display: none

  .agent
  .object
    .cover
      .avi
        width: 100%
        background-color: transparent
        border: none
        box-shadow: none
        padding: 1rem 0
        &:hover
          cursor: default
          background-color: transparent
        img
          border-radius: 50%
#Content
#ShellOutput
  .box
    &.wikipedia
      display: flex
      flex-flow: row wrap
      .wiki
        flex: 1 calc(50% - 1rem)
        width: calc(50% - 1rem)
        margin: .5rem

        h4
          white-space: nowrap
          text-overflow: ellipsis
          overflow: hidden
          widows 100%

        .summary
          .describe
            height: 100px
            overflow: auto

    &.wiki
      display: flex
      flex-flow: column nowrap
      border-left: .2rem solid
      border-right: .2rem solid
      font-size: .8rem
      border-radius: 1rem
      margin: 1rem 0
      padding: .5rem 1rem
      h4
        font-size: 1.2rem
        font-weight: bold
        padding: 0
        margin: 0
      .label
        display: none

      .summary
        display: flex
        .thumbnail
          padding: 0 .5rem 0 0
          img
            max-width: 72px
            max-height: 72px
            border-radius: .5rem


    &.buttons
      display: flex
      justify-content: center
      flex-flow: row wrap
      padding: 0
      margin: 5px 0
      padding: .1rem
      .item
        margin: 0

      .cloudbtn
        border-radius: .5
        line-height: 1.25

      .btn
        margin: .1rem

        &.cmd
        &.tty
          border: none
          border-radius: 1rem
        &.button
          padding: .25rem .5rem
          font-weight: normal

    &.menu
      display: flex
      justify-content: flex-start
      flex-flow: column nowrap
      padding: 0
      margin: 5px 0
      .item
        margin: 0

      .btn
        text-align: left
        transition: var(--transition-default)

        &.cmd
        &.tty
          border: none
          border-radius: 1rem

        &.cloudcmd
          color: inherit
          border-radius: .5
          line-height: 1.25
          margin: .15rem 0 0 0
          padding: .25rem
          &::before
            content: attr(data-cloudcmd)
            font-size: .8rem

        &.cloudbtn
          color: inherit
          border-radius: .5
          line-height: 1.25
          margin: .15rem 0 0 0
          padding: .25rem
          &::before
            content: attr(data-cloudbtn)
            font-size: .8rem

        &.button
          padding: .25rem .5rem
          font-weight: normal
          color: inherit
          box-shadow: none
          margin: .15rem 0 0 0
          padding: .25rem
